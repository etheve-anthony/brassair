{% extends 'base_admin.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="d-none d-lg-block">
		{% include 'navbar_lg_admin.html.twig' %}
	</div>

	<div class="d-block d-lg-none">
		{% include 'navbar_md_admin.html.twig' %}
	</div>
	<section class="container my-3">
		<div class="row">
			<div class="col-lg-6">

				<h1>Inscription</h1>


				{{ form_start(registrationForm) }}
				<label>Prénom</label>
				{{ form_widget(registrationForm.firstName) }}
				<label class="mt-2">Nom</label>
				{{ form_widget(registrationForm.lastName) }}
				<label class="mt-2">E-mail</label>
				{{ form_widget(registrationForm.email) }}
				<label class="mt-2">Rôle utilisateur</label>
				{{ form_widget(registrationForm.roles)}}
				<label class="mt-2">Mot de passe</label>
				{{ form_widget(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

				<button type="submit" class="btn btn-success my-3">Inscrire l'utilisateur</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
		<a href="{{path('app_admin_page')}}">Revenir à l'accueil de l'administration</a>
	</section>
{% endblock %}
