{% extends 'base_admin.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
	<div class="d-none d-lg-block">
		{% include 'navbar_lg_admin.html.twig' %}
	</div>

	<div class="d-block d-lg-none">
		{% include 'navbar_md_admin.html.twig' %}
	</div>
	<div class="mx-5 mb-5">

		<h1 class="mt-3">Liste des cuisines et autres produits</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Image principale</th>
					<th>Description</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for kitchen in kitchens %}
					<tr>
						<td>{{ kitchen.id }}</td>
						<td>{{ kitchen.title }}</td>
						<td>{{ kitchen.mainImage }}</td>
						<td>{{ kitchen.description }}</td>
						<td>
							<a href="{{ path('app_kitchen_show', {'slug': kitchen.slug}) }}">voir</a>
							<a href="{{ path('app_kitchen_edit', {'slug': kitchen.slug}) }}">éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="10">Pas de produits trouvés</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<p>
			<a href="{{ path('app_kitchen_new') }}">Créer un nouveau produit</a>
			|
			<a href="{{path('app_admin_page')}}">Revenir à l'accueil de l'administration</a>
		</p>
	</div>
{% endblock %}
