{% extends 'base.html.twig' %}

{% block title %}Index des infos de contact
{% endblock %}

{% block body %}
	<div class="d-none d-lg-block">
		{% include 'navbar_lg_admin.html.twig' %}
	</div>

	<div class="d-block d-lg-none">
		{% include 'navbar_md_admin.html.twig' %}
	</div>
	<div class="mx-5">
		<h1 class="mt-3">Les informations de contact</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Téléphone</th>
					<th>E-mail</th>
					<th>Adresse</th>
					<th>Horaire d'ouverture</th>
					<th>Page Facebook</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for contact_info in contact_infos %}
					<tr>
						<td>{{ contact_info.id }}</td>
						<td>{{ contact_info.telephone }}</td>
						<td>{{ contact_info.email }}</td>
						<td>{{ contact_info.address }}</td>
						<td>{{ contact_info.openingHours }}</td>
						<td>{{ contact_info.facebookPage }}</td>
						<td>
							<a href="{{ path('app_contact_infos_show', {'id': contact_info.id}) }}">voir</a>
							<a href="{{ path('app_contact_infos_edit', {'id': contact_info.id}) }}">éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">pas de d'informations de contact trouvées</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<p>
			<a href="{{ path('app_contact_infos_new') }}">Créer les coordonnées</a>
			|
			<a href="{{path('app_admin_page')}}">Revenir à l'accueil de l'administration</a>
		</p>
	</div>
{% endblock %}
