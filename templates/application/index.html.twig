{% extends 'base_admin.html.twig' %}

{% block title %}
  Liste des applications
{% endblock %}

{% block body %}
  <div class="d-none d-lg-block">
    {% include 'navbar_lg_admin.html.twig' %}
  </div>

  <div class="d-block d-lg-none">
    {% include 'navbar_md_admin.html.twig' %}
  </div>
  <div class="mx-5 mb-5">
    <h1 class="mt-3">Liste des applications</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Titre</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for application in applications %}
          <tr>
            <td>{{ application.id }}</td>
            <td>{{ application.title }}</td>
            <td>
              <a href="{{ path('app_application_show', { slug: application.slug }) }}" class="btn btn-primary">voir</a>
              <a href="{{ path('app_application_edit', { slug: application.slug }) }}" class="btn btn-warning">éditer</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="10">Pas d'applications trouvées</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <p>
      <a href="{{ path('app_application_new') }}">Créer une nouvelle application</a>
      |
      <a href="{{ path('app_admin_page') }}">Revenir à l'accueil de l'administration</a>
    </p>
  </div>
{% endblock %}
