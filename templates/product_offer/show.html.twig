{% extends 'base_admin.html.twig' %}

{% block title %}Offre du moment
{% endblock %}

{% block body %}
	<div class="d-none d-lg-block">
		{% include 'navbar_lg_admin.html.twig' %}
	</div>

	<div class="d-block d-lg-none">
		{% include 'navbar_md_admin.html.twig' %}
	</div>
	<div class="mx-5">
		<h1>Offre du moment</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product_offer.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ product_offer.title }}</td>
				</tr>
				<tr>
					<th>Message 1</th>
					<td>{{ product_offer.message1 }}</td>
				</tr>
				<tr>
					<th>Message 2</th>
					<td>{{ product_offer.message2 }}</td>
				</tr>
				<tr>
					<th>Message 3</th>
					<td>{{ product_offer.message3 }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ product_offer.description }}</td>
				</tr>
				<tr>
					<th>Image 1</th>
					<td>{{ product_offer.image1 }}</td>
				</tr>
				<tr>
					<th>Image 2</th>
					<td>{{ product_offer.image2 }}</td>
				</tr>
				<tr>
					<th>Image 3</th>
					<td>{{ product_offer.image3 }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ product_offer.slug }}</td>
				</tr>
			</tbody>
		</table>

		<p>
			<a href="{{ path('app_product_offer_index') }}">Revenir à liste</a>
			|
			<a href="{{ path('app_product_offer_edit', {'id': product_offer.id}) }}">éditer</a>
		</p>
		<hr>
		{{ include('product_offer/_delete_form.html.twig') }}
	</div>

{% endblock %}
