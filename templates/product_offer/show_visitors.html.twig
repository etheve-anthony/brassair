{% extends 'base.html.twig' %}

{% block title %}Offre du moment
{% endblock %}

{% block body %}
	<div class="d-none d-lg-block">
		{% include 'navbar_visitors_lg.html.twig' %}
	</div>

	<div class="d-block d-lg-none">
		{% include 'navbar_visitors_md.html.twig' %}
	</div>

	<div class="mx-5 my-3">

		<div class="row">
			<div class="col-lg-4 col-md-12 border border-dark rounded mb-3">
				<h1 class="text-center pt-3">{{ product_offer.title }}</h1>
				<p class="text-center">{{ product_offer.description }}</p>
				<ul class="lead">
					<li>{{ product_offer.message1 }}</li>
					<li>{{ product_offer.message2 }}</li>
					<li>{{ product_offer.message3 }}</li>
				</ul>
		</div>
		<div class="col-lg-8 col-md-12">
		<div id="carouselProductImage" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
				<img src="{{ product_offer.image1 }}" class="d-block w-100 rounded" alt="...">
				</div>
				<div class="carousel-item">
				<img src="{{ product_offer.image2 }}" class="d-block w-100 rounded" alt="...">
				</div>
				<div class="carousel-item">
				<img src="{{ product_offer.image3 }}" class="d-block w-100 rounded" alt="...">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselProductImage" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Précédent</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselProductImage" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Suivant</span>
			</button>
			</div>
		</div>
	</div>

	<a href="{{ path('app_product_offer_index_visitors') }}">
		<small>Voir les offres précédentes</small>
	</a>
</div>
{% include 'contact_bar.html.twig' %}
{% include 'footer.html.twig' %}{% endblock %}{% block javascripts %}

<script>
	// ajout image 1 hero section
document.addEventListener('DOMContentLoaded', function () {
var imageUrl = "{{ product_offer.image1 }}"; // Récupère l'URL de l'image depuis Twig
var heroSection = document.getElementById('dynamic-hero-background');

// Définit l'image de fond
heroSection.style.backgroundImage = 'url(' + imageUrl + ')';
heroSection.style.backgroundSize = 'cover';
heroSection.style.backgroundPosition = 'center';
heroSection.style.minHeight = '650px';
heroSection.style.borderRadius = '5px';
});
</script>{% endblock %}
